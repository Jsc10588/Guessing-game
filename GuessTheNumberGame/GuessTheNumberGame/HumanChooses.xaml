<Window x:Class="GuessTheNumberGame.HumanChooses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessTheNumberGame"
        mc:Ignorable="d"
        Title="HumanChooses" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="TitleHC" HorizontalAlignment="Left" Margin="71,28,0,0" TextWrapping="Wrap" Text="In this part you get to type a number between 1 and 1000 and the computer will guess it, or at least try to." VerticalAlignment="Top" FontFamily="Showcard Gothic"/>
        <TextBlock x:Name="Instructions" HorizontalAlignment="Left" Margin="260,0,0,277" TextWrapping="Wrap" Text="Please type a number btewwn 1 and 1000." VerticalAlignment="Bottom"/>
        <TextBox x:Name="UserInput" HorizontalAlignment="Left" Height="23" Margin="324,168,0,0" TextWrapping="Wrap" Text="Type number here" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="StartButton" Content="Go" HorizontalAlignment="Left" Margin="343,218,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>
        <Button x:Name="MainMenu" Content="Back to menu" HorizontalAlignment="Left" Margin="343,355,0,0" VerticalAlignment="Top" Width="75" Click="MainMenu_Click"/>

    </Grid>
</Window>
